<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:gravity="right"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/user4"></ImageView>
    <TextView
        android:id="@+id/current_username"
        android:layout_width="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginRight="16dp"
        android:textSize="25dp"
        android:layout_marginLeft="8dp"
        android:layout_height="wrap_content"></TextView>
    <Button
        android:id="@+id/log_out_list_note"
        android:layout_marginLeft="170dp"
        android:layout_width="wrap_content"
        android:text="Log Out"
        android:fontFamily="sans-serif-smallcaps"
        android:background="@color/g"
        android:layout_height="wrap_content"></Button>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">
    <EditText
        android:layout_marginLeft="12dp"
        android:id="@+id/NewNote"
        android:layout_marginTop="16dp"
        android:layout_width="310dp"
        android:layout_height="wrap_content"></EditText>
    <ImageView
        android:id="@+id/addNewNote"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/cart"
        android:layout_marginBottom="5dp"
        android:padding="16dp"
        android:layout_height="wrap_content"></ImageView>
</LinearLayout>
    <LinearLayout
        android:id="@+id/empty_note_page"
        android:layout_width="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_height="wrap_content"
            android:textSize="32dp"
            android:text="Note List is empty"></TextView>
    </LinearLayout>
    <ListView
        android:id="@+id/notes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>